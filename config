if [ $STREAM = NO ]; then
    echo "ngx_stream_minecraft_forward_module depends on stream module!"
    exit 1
fi

NSMFM_SRCDIR="src"
NSMFM_SRCDIR="$ngx_addon_dir/$NSMFM_SRCDIR"
NSMFM_MAIN="ngx_stream_minecraft_forward_module"
NSMFM_FILTER="ngx_stream_minecraft_forward_content_filter_module"
NSMFM_PREREAD="ngx_stream_minecraft_forward_preread_module"

NSMFM_INCS="$NSMFM_SRCDIR \
$NSMFM_SRCDIR/filter \
$NSMFM_SRCDIR/main \
$NSMFM_SRCDIR/preread \
$NSMFM_SRCDIR/protocol \
$NSMFM_SRCDIR/utils"

NSMFM_DEPS="$NSMFM_SRCDIR/utils/nsmfm_hostname.h \
$NSMFM_SRCDIR/utils/nsmfm_packet.h \
$NSMFM_SRCDIR/utils/nsmfm_varint.h \
$NSMFM_SRCDIR/protocol/nsmfm_packet.h \
$NSMFM_SRCDIR/protocol/nsmfm_protocol_number.h"

NSMFM_DEP_SRCS="$NSMFM_SRCDIR/utils/nsmfm_hostname.c \
$NSMFM_SRCDIR/utils/nsmfm_packet.c \
$NSMFM_SRCDIR/utils/nsmfm_varint.c \
$NSMFM_SRCDIR/protocol/nsmfm_packet.c \
$NSMFM_SRCDIR/protocol/nsmfm_protocol_number.c"

NSMFM_MAIN_SRCS="\
$NSMFM_SRCDIR/main/ngx_stream_minecraft_forward_module.c"

NSMFM_PREREAD_SRCS="\
$NSMFM_SRCDIR/preread/nsmfpm_session.c \
$NSMFM_SRCDIR/preread/ngx_stream_minecraft_forward_preread_module.c"

NSMFM_FILTER_SRCS="\
$NSMFM_SRCDIR/filter/ngx_stream_minecraft_forward_content_filter_module.c \
$NSMFM_SRCDIR/filter/nsmfcfm_session.c"

NSMFM_SRCS="$NSMFM_MAIN_SRCS $NSMFM_PREREAD_SRCS $NSMFM_FILTER_SRCS $NSMFM_DEP_SRCS"

ngx_addon_name="$NSMFM_MAIN"

ngx_module_type=STREAM
ngx_module_libs=

ngx_module_name=
ngx_module_incs="$NSMFM_INCS"
ngx_module_deps="$NSMFM_DEPS"
ngx_module_srcs="$NSMFM_DEP_SRCS"
. auto/module

ngx_module_incs=
ngx_module_deps=

ngx_module_name="$NSMFM_MAIN"
ngx_module_srcs="$NSMFM_MAIN_SRCS"
. auto/module

ngx_module_name="$NSMFM_FILTER"
ngx_module_srcs="$NSMFM_FILTER_SRCS"
. auto/module

ngx_module_name="$NSMFM_PREREAD"
ngx_module_srcs="$NSMFM_PREREAD_SRCS"
. auto/module
